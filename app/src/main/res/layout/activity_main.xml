<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/music_app_bac"
    tools:context="com.example.wojtekkurylo.musicstructureapp.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttons_body"
        android:layout_alignParentTop="true">

        <Button
            style="@style/app_name"
            android:layout_width="250dp"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/buttons_body"
        android:layout_width="200dp"
        android:layout_height="280dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="70dp">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardBackgroundColor="@color/t_one"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">

                <Button
                    android:id="@+id/myMusic"
                    style="@style/myMusic"
                    android:layout_width="150dp"
                    android:layout_height="0dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="30dp"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/recentlyListened"
                    style="@style/recentlyListened"
                    android:layout_width="150dp"
                    android:layout_height="0dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/byArtist"
                    style="@style/byArtist"
                    android:layout_width="150dp"
                    android:layout_height="0dp"

                    android:layout_marginBottom="10dp"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/myPlaylist"
                    style="@style/myPlaylist"
                    android:layout_width="150dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />


            </LinearLayout>

        </android.support.v7.widget.CardView>

    </RelativeLayout>


</RelativeLayout>
